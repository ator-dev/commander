{
	"manifest_version": 3,
	"name": "Navigator",
	"description": "Navigate quickly with configurable commands",
	"version": "0.0.0",

	"icons": {
		"48": "/icons/navigator.svg",
		"96": "/icons/navigator.svg"
	},

	"permissions": [
		"scripting",
		"tabs",
		"tabGroups",
		"storage",
		"search",
		"contextMenus"
	],

	"optional_permissions": [],

	"host_permissions": [
		"*://*/*"
	],

	"background": {
		"service_worker": "/dist/background.js"
	},

	"options_ui": {
		"page": "/pages/options.html",
		"browser_style": false
	},

	"action": {
		"default_icon": "/icons/navigator.svg",
		"default_title": "Navigator",
		"default_popup": "/pages/popup.html"
	},

	"web_accessible_resources": [
		{
			"resources": [
				"/icons/navigator.svg"
			],
			"matches": [ "*://*/*" ]
		}
	],

	"commands": {
		"open-popup-general": {
			"suggested_key": { "default": "Alt+Space" },
			"description": "Open the global command input [general]"
		},
		"open-popup-alpha": {
			"description": "Open the global command input [alpha]"
		},
		"open-popup-beta": {
			"description": "Open the global command input [beta]"
		},
		"open-popup-gamma": {
			"description": "Open the global command input [gamma]"
		}
	}
}
